@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GummiBearKing.Models.Gummi
<link href="~/Styles/Gummi/FormStyle.css" rel="stylesheet" />

<div class="formMain">
    @using (Html.BeginForm())
    {
        <div class="forms">
            @Html.HiddenFor(model => model.GummiId)

            <div class="formItem">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
            </div>
            <div class="formItem">
                @Html.LabelFor(model => model.Origin)
                @Html.EditorFor(model => model.Origin)
            </div>
            <div class="formItem">
                @Html.LabelFor(model => model.Cost)
                @Html.EditorFor(model => model.Cost)
            </div>
            <input type="submit" value="Save" />
        </div>
    }
    <p>@Html.ActionLink("Back to list", "Index")</p>
</div>