@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummiBearKing.Models.Gummi
<link href="~/Styles/Gummi/FormStyle.css" rel="stylesheet" />

<div class="formHeading">
    <h3>Add new Gummi</h3>
</div>
<div class="formMain">

    @using (Html.BeginForm())
    {
        <div class="forms">
            <div class="formItem">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name)
            </div>
            <div class="formItem">
                @Html.LabelFor(model => model.Origin)
                @Html.TextBoxFor(model => model.Origin)
            </div>
            <div class="formItem">
                @Html.LabelFor(model => model.Cost)
                @Html.TextBoxFor(model => model.Cost)
            </div>
        </div>
        <input type="submit" value="Add new Gummi" />
    }

</div>
<p>@Html.ActionLink("Back to list", "Index")</p>