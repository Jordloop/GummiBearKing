@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<GummiBearKing.Models.Gummi>
<link href="~/Styles/Gummi/StyleSheet.css" rel="stylesheet" />



<div class="main-container">
    <div class="imgContainer">
    </div>
    <div class="productsContainer">

        @foreach (var listGummi in Model)
        {
            <div class="product">
                <div class="productName">
                    <h1>@Html.DisplayFor(modelItem => listGummi.Name)</h1>
                </div>
                <div class="productButtons">
                    <div class="link">
                        @Html.ActionLink("Details", "Details", new { id = listGummi.GummiId })
                    </div>
                    <div class="link">
                        @Html.ActionLink("Edit", "Edit", new { id = listGummi.GummiId })
                    </div>
                    <div class="link">
                        @Html.ActionLink("Delete", "Delete", new { id = listGummi.GummiId })
                    </div>
                </div>
            </div>
        }
    </div>
    <p>@Html.ActionLink("Add new item", "Create")</p>
</div>

